      span.label value1
      input(type="text" name="values")
      input(type="number" name="values")
    div.input
      span.label value2
      input(type="text" name="values")
      input(type="number" name="values")
    div.input
      span.label value3
      input(type="text" name="values")
      input(type="number" name="values")
    div.actions
      input(type="submit", value="add")
  p Data from MongoDB:
  p #{dataJSON}

